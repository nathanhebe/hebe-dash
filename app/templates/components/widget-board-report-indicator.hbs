<li {{bind-attr class=":widget :widgetIndicator :cover :notouch"}} data-sizex="1" data-sizey="1">
    <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
        <div class="flipper">
            <div class="front">
                <div {{bind-attr class="widget.ragColour :info :radiusT"}}>
                    <div {{bind-attr id=widget.id}} class="icon right IndicatorIcon_chart"></div>
                    <div class="date">Aug-14</div>
                    <h5  class="title"><!--{{widget.id}}.-->{{widget.title}}</h5>
                </div>
                <div class="values radiusB paddingTL paddingLXL">
                    <div class="currentValue left">{{widget.currentVal}}{{widget.valueString}}</div>
                    <!--<div {{bind-attr class=":indicator widget.trend :up"}}>&nbsp;</div>-->
                    <div class="indicator up left">&nbsp;</div>
                </div>
            </div>



            <div class="back">
                <!-- back content -->
                <div class="widgetOptions">
                    <button>Explore</button>
                    <button>Zoom</button>
                    <button {{action 'openModal' 'modal' widget}}>Share</button>
                    <button {{action 'openModal' 'WidgetMeta' widget}}>Meta</button>
                </div>
            </div>
        </div>
    </div>

    <div class="metadata">
        <h2>{{widget.title}}</h2>
        <h5>{{widget.subTitle}}</h5>
        <h5>{{widget.description}}</h5>
    </div>

</li>