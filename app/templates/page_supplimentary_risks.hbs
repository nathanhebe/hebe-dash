<div id="MainWrapper" class="boardReport">
    <section id="MainContent" class="supplimentary risks">
    {{#if data}}
        {{#each section in data.sections}}
        <div class="section">
            <h1 class="paddingBL">{{section.title}}</h1>
            <div class="group">
                <div class="col span_12 group">
                    <div class="row borderT borderB marginBL group__headings">
                        <div class="col span_3 borderR">Risk</div>
                        <div class="col span_2 borderR">Current status</div>
                        <div class="col span_1 borderR">Mitigated</div>
                        <div class="col span_3 borderR">Comments</div>
                        <div class="col span_2">Achieve date</div>
                    </div>
                </div>
            </div>
            {{#each group in section.groups}}
                <div class="group">
                    <div class="col span_1 groupLabel">
                        <div class="verticalText">
                            {{group.title}}
                        </div>
                    </div>
                    <div class="col span_11 group">
                        {{#each indicator in group.indicators}}
                            <div class="dataRow border radiusL radiusR marginBS">
                                <div class="col span_3">{{indicator.Col2}}</div>
                                <div class="col span_2 paddingNone">
                                    <div {{bind-attr class="indicator.Trend indicator.RAGCode :block :radiusR_XL :indicator"}}>{{indicator.RAG}}</div>
                                </div>
                                <div class="col span_1 paddingNone">
                                    <div {{bind-attr class="indicator.mitigatedRAGCode :block :radiusR_XL :indicator"}}>{{indicator.mitigatedRAG}}</div>
                                </div>
                                <div class="col span_4 paddingNone">
                                    {{indicator.comments}} 
                                </div>
                                <div class="col span_2 paddingNone">
                                    {{indicator.achieveDate}}
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>
        {{/each}}
    {{/if}}
    </section>
</div>